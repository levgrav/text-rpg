                                    "justification": "center"
                                }
                            }
                        ],
                        [
                            {
                                "instanceof": "File_Listbox",
                                "attrs": {
                                    "folder_path": "files/game_data/saves",
                                    "font": ["JetBrains Mono", 30],
                                    "size": [40, 5],
                                    "key": "-SAVED_GAMES-",
                                    "select_mode": "single",
                                    "enable_events": true
                                }
                            }
                        ],
                        [
                            {
                                "instanceof": "Button",
                                "attrs": {
                                    "button_text": "Load",
                                    "font": ["JetBrains Mono", 30],
                                    "size": [15, 2]
                                }
                            },
                            {
                                "instanceof": "Button",
                                "attrs": {
                                    "button_text": "Back",
                                    "font": ["JetBrains Mono", 30],
                                    "size": [15, 2],
                                    "key": "Main Menu"
                                }
                            }
                        ]
                    ],
                    "element_justification":"center", 
                    "expand_x": true
                }
            }
        ]
    ],
    "Game Page": [
        [ 
            {
                "instanceof": "Text",
                "attrs": {
                    "text": "Enter command below",
                    "font": ["JetBrains Mono", 20],
                    "key": "Output",
                    "expand_x": true,
                    "expand_y": true
                }
            }
        ],
        [ 
            {
                "instanceof": "Input",
                "attrs": {
                    "default_text": "",
                    "font": ["JetBrains Mono", 30],
                    "key": "Input",
                    "expand_x": true
