                            },
                            {
                                "instanceof": "Button",
                                "attrs": {
                                    "button_text": "Load Game",
                                    "size": [15, 2],
                                    "font": ["JetBrains Mono", 30]
                                }
                            },
                            {
                                "instanceof": "Button",
                                "attrs": {
                                    "button_text": "Quit",
                                    "size": [15, 2],
                                    "font": ["JetBrains Mono", 30]
                                }
                            }
                        ]
                    ],
                    "element_justification": "center",
                    "expand_x": true
                }
            }
        ]
    ],
    "New Game": [
        [
            {
                "instanceof": "Column",
                "attrs": {
                    "layout": [
                        [
                            {
                                "instanceof": "Text",
                                "attrs": {
                                    "text": "New Game",
                                    "font": ["JetBrains Mono", 80],
                                    "justification": "center",
                                    "key": "-TITLE-"
                                }
                            }
                        ]
                    ],
                    "element_justification": "center",
                    "expand_x": true
                }
            }
        ],
        [
            {
                "instanceof": "Column",
                "attrs": {
                    "layout": [
                        [
                            {
                                "instanceof": "Input",
