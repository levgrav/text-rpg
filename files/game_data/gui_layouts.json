            },
            {
                "instanceof": "Button",
                "attrs": {
                    "button_text": "Enter",
                    "font": ["JetBrains Mono", 20],
                    "key": "Enter",
                    "size": [10, 1]
                }
            },
            {
                "instanceof": "Button",
                "attrs": {
                    "button_text": "Save & Quit",
                    "font": ["JetBrains Mono", 20],
                    "key": "Quit",
                    "size": [15, 1]
                }
            }
        ]
    ]
}
    
